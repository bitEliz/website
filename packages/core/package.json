{
  "name": "@blog/core",
  "version": "0.1.0",
  "private": true,
  "description": "core package of blog",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server --outDir dist/server",
    "clean": "rm -rf dist",
    "debug": "node --inspect-brk server",
    "dev": "node server",
    "generate": "vite build --ssrManifest --outDir dist/static && pnpm run build:server && node prerender",
    "serve": "NODE_ENV=production node server"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@vueuse/core": "^9.2.0",
    "bootstrap": "^5.2.1",
    "highlight.js": "^11.6.0",
    "marked": "^4.1.0",
    "pinia": "^2.0.22",
    "vue": "^3.2.39",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.4",
    "@types/marked": "^4.0.7",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vitejs/plugin-vue-jsx": "^2.0.1",
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "sass": "^1.55.0",
    "serve-static": "^1.15.0",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.7",
    "vite": "^3.1.3"
  }
}
