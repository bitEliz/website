{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=2048 vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,ts,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --cache --cache-location \"node_modules/.cache/stylelint/\" --custom-syntax postcss-html --fix \"**/*.{vue,less,postcss,css,scss}\"",
    "lint:lint-staged": "lint-staged"
  },
  "gitHooks": {
    "pre-commit": "lint-staged --concurrent false",
    "commit-msg": "commitlint -e -V"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.0.1",
    "@popperjs/core": "^2.11.5",
    "@vueuse/core": "^8.6.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.3",
    "highlight.js": "^11.4.0",
    "marked": "^4.0.16",
    "vue": "^3.2.21",
    "vue-router": "^4.0.10",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/marked": "^4.0.3",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@vitejs/plugin-vue": "^2.1.0",
    "@vue/compiler-sfc": "^3.2.28",
    "cross-env": "^7.0.3",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.1.0",
    "less": "^4.1.1",
    "lint-staged": "^13.0.0",
    "postcss-html": "^1.2.0",
    "prettier": "^2.3.2",
    "sass": "^1.52.2",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "25.0.0",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vite-plugin-compression": "^0.5.1",
    "vue-eslint-parser": "^9.0.2",
    "vue-tsc": "^0.36.1",
    "yorkie": "^2.0.0"
  }
}
