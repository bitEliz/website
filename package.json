{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:core": "pnpm --filter=\"./packages/core\" --stream build",
    "dev:core": "pnpm --filter=\"./packages/core\" --stream dev",
    "generate:core": "pnpm --filter=\"./packages/core\" --stream generate",
    "lint": "eslint --ext .cjs,.js,.ts .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{cjs,js,vue,json,yaml,scss,md}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sort-package-json": "^1.57.0",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": ">=16.11.0"
  }
}
