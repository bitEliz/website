{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=2048 vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,ts,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --cache --cache-location \"node_modules/.cache/stylelint/\" --custom-syntax postcss-html --fix \"**/*.{vue,less,postcss,css,scss}\"",
    "lint:lint-staged": "lint-staged"
  },
  "gitHooks": {
    "pre-commit": "lint-staged --concurrent false",
    "commit-msg": "commitlint -e -V"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@vueuse/core": "^9.1.0",
    "bootstrap": "^5.2.0",
    "bootstrap-icons": "^1.9.1",
    "highlight.js": "^11.6.0",
    "marked": "^4.0.18",
    "vue": "^3.2.37",
    "vue-router": "^4.1.3",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/bootstrap": "^5.2.2",
    "@types/marked": "^4.0.3",
    "@types/node": "^18.7.5",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/compiler-sfc": "^3.2.37",
    "cross-env": "^7.0.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.3.0",
    "lint-staged": "^13.0.3",
    "postcss-html": "^1.5.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.4",
    "stylelint": "^14.10.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "27.0.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.7",
    "vite-plugin-compression": "^0.5.1",
    "vue-eslint-parser": "^9.0.3",
    "vue-tsc": "^0.40.1",
    "yorkie": "^2.0.0"
  }
}
